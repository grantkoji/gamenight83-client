                        if (cUserFriends.length === 0) {
                            cUserFriends.push(users.find(user => user.id === friendship.user_id))
                        }
                        else if (cUserFriends.length > 0 && cUserFriends.some(user => user.id === friendship.user_id) === false) {
                            cUserFriends.push(users.find(user => user.id === friendship.user_id))
                        }
                    }
